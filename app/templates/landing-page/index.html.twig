<script type="application/javascript">
    const btnSubmitCheckout = document.getElementById("btn-submit-checkout");
    const btnBackToLanding = document.getElementById("btn-back-to-landing");
    const btnGoToPayment = document.querySelectorAll(".btn-goto-payment");
    const pageLanding = document.getElementById("page-landing");
    const pageCheckout = document.getElementById("page-checkout");

    btnSubmitCheckout.addEventListener('click', function (e) {
        console.log(this);
        e.preventDefault();
    });

    btnBackToLanding.addEventListener('click', function (e) {
        console.log(this);
        e.preventDefault();
        pageLanding.classList.toggle("d-none");
        pageCheckout.classList.toggle("d-none");
        window.scrollTo(0, 0);
    });

    console.log(btnGoToPayment);
    btnGoToPayment.forEach((e) => e.addEventListener('click', function (e) {
        console.log(this);
        e.preventDefault();
