{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}

<div class="container">
    <div class="row d-flex flex-column align-items-center justify-content-center">
        <div class="hero text-start col-md-3">

            {% if app.user %}
                <div class="mb-3">
                    <p class="text-center">Hello, {{ app.user.userIdentifier }}.</p>
                    <p class="text-center">You already in the system.</p>

                    <div class="text-center">
                        <a href="{{ absolute_url(path('security_logout')) }}" class="btn btn-light rounded-5">Logout</a>
                        <a href="{{ absolute_url(path('cp_user_show', {'user' : app.user.username})) }}" class="btn btn-primary rounded-5">Profile</a>
                    </div>
                </div>

            {% else %}
                <form method="post">
                     {% if error %}
                         <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                     {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>

                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}"
                           name="email" id="inputEmail"
                           class="form-control mb-3"
                           autocomplete="email" required autofocus
                    >

                    <label for="inputPassword">Password</label>
                    <input type="password"
                           name="password"
                           id="inputPassword"
                           class="form-control mb-3"
                           autocomplete="current-password" required
                    >

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="checkbox mb-3">
                        <label class="mb-3">
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                        <a href="{{ absolute_url(path('security_register')) }}"
                           class="text-primary d-inline-block mb-3"
                        >
                            Do not have account? Register now!
                        </a>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-lg btn-primary rounded-5" type="submit">
                            Sign in
                        </button>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
