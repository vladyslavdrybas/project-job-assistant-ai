{% extends 'control-panel/index.html.twig' %}

{% block content %}
<div class="container pt-2 pt-lg-5 bg-light py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8" style="min-width: 300px;">
            <h1>Cover Letter writing</h1>

            {{ form_start(editForm,
                {
                    'method': editForm.vars.method,
                    'attr': {
                    'id': editForm.vars.id,
                    'class': 'w-100'
                }
                }
            ) }}
            <label for="{{ editForm.isNeedAiHelp.vars.id }}">
                <button
                    class="btn btn-primary rounded-0 mb-3"
                    form="{{ editForm.vars.id }}"
                    onclick="document.getElementById('{{ editForm.isNeedAiHelp.vars.id }}').checked=true;"
                >
                    <svg class="bi bi-small bi-fix"><use xlink:href="#magic"/></svg>
                    Write with AI
                </button>
                {{ form_row(editForm.isNeedAiHelp, {'label': false, 'row_attr': {'class': 'd-none'}, 'attr': {'class': 'd-none'}}) }}
            </label>

            {{ form_errors(editForm) }}

            {{ form_row(editForm.title) }}
            {{ form_row(editForm.jobTitle) }}
            <hr>

            {% include 'control-panel/cover-letter/employer-short.html.twig' with {'form': editForm.employer} only %}
            <hr>
            {% include 'control-panel/cover-letter/sender.html.twig' with {'form': editForm.sender} only %}
            <hr>
            {% include 'control-panel/cover-letter/receiver.html.twig' with {'form': editForm.receiver} only %}

            {% if editForm.resume is defined %}
                <hr>
                {{ form_row(editForm.resume) }}
            {% endif %}

            <hr>
            <h3>Letter Body</h3>

            <h4 class="mt-3">{{ editForm.content.opening.vars.label }}</h4>
            {{ form_row(editForm.content.opening,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.content.opening.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.content.whyMe.vars.label }}</h4>
            {{ form_row(editForm.content.whyMe,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.content.whyMe.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.content.conclusion.vars.label }}</h4>
            {{ form_row(editForm.content.conclusion,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.content.conclusion.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.content.signoff.vars.label }}</h4>
            {{ form_row(editForm.content.signoff,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.content.signoff.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            {{ form_row(editForm._token) }}
            {{ form_end(editForm, {'render_rest': false}) }}
            <hr class="mb-3">
            <div
                class="d-none d-sm-flex flex-row justify-content-center align-items-center px-0 mx-0"
            >

                <button
                    class="btn btn-primary rounded-0"
                    form="{{ editForm.vars.id }}"
                >
                    Save
                </button>
                <button
                    class="btn btn-primary rounded-0 ms-2"
                    form="{{ editForm.vars.id }}"
                >
                    Preview
                </button>
                <button
                    class="btn btn-primary rounded-0 ms-2"
                    form="{{ editForm.vars.id }}"
                >
                    PDF
                </button>
            </div>
        </div>

    </div>
</div>

    <nav
        id="section--resume-edit-sidebar-nav"
        class=" action-btn-nav sidebar center left position-fixed d-none d-sm-flex d-flex flex-column justify-content-start align-items-start"
    >
        <button
            class="btn btn-primary bg-primary-hover rounded-0 mb-2 position-relative"
            form="{{ editForm.vars.id }}"
        >
            Save
        </button>
        <button
            class="btn btn-primary rounded-0 mb-2 position-relative"
            form="{{ editForm.vars.id }}"
        >
            Preview
        </button>
        <button
            class="btn btn-primary rounded-0 mb-2 position-relative"
            form="{{ editForm.vars.id }}"
        >
            PDF
        </button>
    </nav>

    <nav
        id="section--resume-edit-bottom-nav"
        class="action-btn-nav bottom left d-sm-none position-fixed d-flex flex-row justify-content-between align-items-center bg-light px-2"
    >
        <button
            class="btn btn-primary rounded-0 position-relative"
            form="{{ editForm.vars.id }}"
        >
            Save
        </button>
        <button
            class="btn btn-primary rounded-0 position-relative"
            form="{{ editForm.vars.id }}"
        >
            Preview
        </button>
        <button
            class="btn btn-primary rounded-0 position-relative"
            form="{{ editForm.vars.id }}"
        >
            PDF
        </button>
    </nav>

{% endblock %}
