{% extends 'control-panel/index.html.twig' %}

{% block content %}
<div class="container bg-light">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8" style="min-width: 300px;">
            {{ form_start(editForm,
                {
                    'method': editForm.vars.method,
                    'attr': {
                    'id': editForm.vars.id,
                    'class': 'w-100'
                }
                }
            ) }}

            {{ form_errors(editForm) }}

            {{ form_row(editForm.coverLetter.title) }}
            {{ form_row(editForm.coverLetter.jobTitle) }}
            {% if editForm.resume is defined %}
                {{ form_row(editForm.resume) }}
            {% endif %}
            <hr>

            {% include 'control-panel/cover-letter/employer-short.html.twig' with {'form': editForm.coverLetter.employer} only %}
            <hr>
            {% include 'control-panel/cover-letter/sender.html.twig' with {'form': editForm.coverLetter.sender} only %}
            <hr>
            {% include 'control-panel/cover-letter/receiver.html.twig' with {'form': editForm.coverLetter.receiver} only %}

            <hr>
            <h3>Letter Body</h3>

            <h4 class="mt-3">{{ editForm.coverLetter.content.opening.vars.label }}</h4>
            {{ form_row(editForm.coverLetter.content.opening,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.coverLetter.content.opening.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.coverLetter.content.whyMe.vars.label }}</h4>
            {{ form_row(editForm.coverLetter.content.whyMe,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.coverLetter.content.whyMe.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.coverLetter.content.conclusion.vars.label }}</h4>
            {{ form_row(editForm.coverLetter.content.conclusion,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.coverLetter.content.conclusion.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <h4 class="mt-3">{{ editForm.coverLetter.content.signoff.vars.label }}</h4>
            {{ form_row(editForm.coverLetter.content.signoff,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ editForm.coverLetter.content.signoff.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            {% if editForm._token is defined %}
                {{ form_row(editForm._token) }}
            {% endif %}
            {{ form_row(editForm.actionBtn) }}
            {{ form_end(editForm, {'render_rest': false}) }}
            <hr class="mb-3">
            {% include 'control-panel/form-submit-navigation-horizontal-only.html.twig' with {'form': editForm, 'actions': editFormActions} only %}

        </div>

    </div>
</div>

    {% include 'control-panel/form-submit-navigation-with-sidebar.html.twig' with {'form': editForm, 'actions': editFormActions} only %}
{% endblock %}
