{% extends 'control-panel/index.html.twig' %}

{% block content %}
<div class="container bg-light">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8" style="min-width: 300px;">
            {{ form_start(form,
                {
                    'method': form.vars.method,
                    'attr': {
                    'id': form.vars.id,
                    'class': 'w-100'
                }
                }
            ) }}

            {{ form_errors(form) }}

            {{ form_row(form.title) }}
            {{ form_row(form.category) }}

            <hr>
            <h3>Overview</h3>

            <h4 class="mt-3">{{ form.description.vars.label }}</h4>
            {{ form_row(form.description,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ form.description.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <hr>
            <h3>Tips</h3>

            <h4 class="mt-3">{{ form.tips.vars.label }}</h4>
            {{ form_row(form.tips,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ form.tips.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <hr>
            <h3>Answer Framework</h3>

            <h4 class="mt-3">{{ form.answerFramework.vars.label }}</h4>
            {{ form_row(form.answerFramework,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ form.answerFramework.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            <hr>
            <h3>My answer</h3>

            <h4 class="mt-3">{{ form.answer.vars.label }}</h4>
            {{ form_row(form.answer,
                {
                    'label': false,
                    'attr': {
                    'class': 'd-none'
                }
                }
            ) }}
            <div
                id="editor-for-{{ form.answer.vars.id }}"
                class="editor-wysiwyg"
            ></div>

            {% if form._token is defined %}
                {{ form_row(form._token) }}
            {% endif %}
            {{ form_row(form.actionBtn) }}
            {{ form_end(form, {'render_rest': false}) }}
            <hr class="mb-3">
            {% include 'control-panel/form-submit-navigation-horizontal-only.html.twig' with {'form': form, 'actions': formActions} only %}
        </div>

    </div>
</div>

    {% include 'control-panel/form-submit-navigation-with-sidebar.html.twig' with {'form': form, 'actions': formActions} only %}
{% endblock %}
