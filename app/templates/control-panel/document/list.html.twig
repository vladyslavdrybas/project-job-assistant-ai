{% extends 'control-panel/index.html.twig'%}

{% block content %}
<div class="container-fluid container-lg pt-2 pt-lg-5 bg-light">
    <div class="row justify-content-center">
        <h1>{{ meta.title }}</h1>
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <button
                    class="nav-link active"
                    id="list--tab-btn-resumes"
                    data-bs-toggle="tab"
                    data-bs-target="#list--tab-content-resumes"
                    type="button"
                    role="tab"
                    aria-controls="list--tab-content-resumes"
                    aria-selected="true"
                >
                    Resumes
                </button>
                <button
                    class="nav-link"
                    id="list--tab-btn-cover-letters"
                    data-bs-toggle="tab"
                    data-bs-target="#list--tab-content-cover-letter"
                    type="button"
                    role="tab"
                    aria-controls="list--tab-content-cover-letter"
                    aria-selected="true"
                >
                    Cover letters
                </button>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div
                class="tab-pane fade show active"
                id="list--tab-content-resumes"
                role="tabpanel"
                aria-labelledby="list--tab-content-resumes-tab"
                tabindex="0"
            >
                {% include 'control-panel/document/list.resume.html.twig' %}
            </div>
            <div
                class="tab-pane fade show"
                id="list--tab-content-cover-letter"
                role="tabpanel"
                aria-labelledby="list--tab-content-cover-letter-tab"
                tabindex="0"
            >
                {% include 'control-panel/document/list.cover-letter.html.twig' %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
