<div
    class="{{ articlePrefix }}socials text-center"
>
    <ul
        class="
            list-unstyled
            ps-1
            d-flex
            flex-row
            justify-content-center
            align-items-center
        "
    >
        {% for key,social in data.socials %}
            <li class="py-1">
                {% if social.icon %}
                    <svg class="bi bi-small"><use xlink:href="#social-{{ social.icon }}"/></svg>
                {% else %}
                    <label class="text-bold">{{ social.label|capitalize }}</label>
                {% endif %}

                {% if social.nickname is defined %}
                    <a
                        href="{{ social.link }}"
                        class="text-decoration-none text-black pe-2"
                        target="_blank"
                    >
                        @{{ social.nickname }}
                    </a>
                {% else %}
                    <a
                        href="{{ social.link }}"
                        class="text-wrap text-decoration-none text-black pe-2"
                        target="_blank"
                    >
                        {{ social.link }}
                    </a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>
